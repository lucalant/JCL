                  <li><%= link_to 'Bedroom', room_home_products_path(:id) %></li>
                  <li><%= link_to 'Dining Room', room_home_products_path(:id) %></li>
                  <li><%= link_to 'Studio', room_home_products_path(:id) %></li>
                  <li><%= link_to 'Living Room', room_home_products_path(:id) %></li>
                  <li><%= link_to 'Loft', room_home_products_path(:id) %></li>
                </ul>
              </li>
              <li><%= link_to 'Categories ', type_home_products_path %>
                <ul>
                  <li><%= link_to 'Sofas and Armchairs', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Night Furniture', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Beds', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Closets', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Chairs', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Systems', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Tables', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Single Furniture', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Lamps', type_home_products_path(:id) %></li>
                  <li><%= link_to 'Fittings', type_home_products_path(:id) %></li>
                </ul>
              </li>
            </ul>
          </li>
          <li class="link"><%= link_to 'Designers', designer_index_path %></li>

          <li class="link"> <p class ="nolink" > Services </p>
            <ul class="sub-menu">
              <li><%= link_to 'Assistance', services_assistance_path %></li>
              <li><%= link_to 'Interior Design', services_interior_design_path%></li>
              <li><%= link_to 'Repair', services_repair_path %></li>
              <li><%= link_to 'Personalization', services_personalization_path %></li>
            </ul>
          </li>

          <li class="link"><%= link_to 'Top Clients', all_top_clients_path %></li>
          <li class="link"><%= link_to 'Distribution', distribution_types_path%></li>
          <li class="link"><%= link_to 'Events', event_all_events_path %>
            <ul class="sub-menu">
              <li><%= link_to 'All Events', event_all_events_path %></li>
              <li><%= link_to 'Monthly Events', event_events_by_month_path %></li>
            </ul>
            </li>
          <li class = "link"> <%= link_to 'Contacts', contacts_path %>
          </li>
          <li class = "link"><%= link_to 'FAQ', faq_path %>
          </li>
          <li class="link"><%= link_to 'Press', news_path %>
              <ul class="sub-menu">
                <li><%= link_to 'News', news_path %></li>
                <li><%= link_to 'Magazine', magazine_path %></li>
              </ul>
          </li>
        </div>
      </nav>
    </div>
  </div>
</div>

<div id="content">
  <%= yield %>
</div>

<div id="footer">
  <div class="footer-inner">
    <div id="footer-wrap" class="container">
      <!-- footer widget -->
      <div class="sixteen columns">
        <section class="widget widget_text">
          <h3 class="widget-title"><span>Get In Touch</span></h3>
          <div class="textwidget">
            <strong>Milan, Italy</strong>
            <div class="asc-contact address">Piazza Leonardo Da Vinci, 36, Milano, MI, Italia</div>
            <div class="asc-contact phone">+39 388872712   or   +39 388872434</div>
            <div class="asc-contact mail"><a href="mailto:info@jcldesign.com">www.jcldesign.com</a></div>
          </div>
        </section>
      </div>
      <!-- end footer widget -->

    </div>
    <div id="copyright" class="container">
      <div class="sixteen columns">
        <div class="five columns alpha">
          JCL Design Â© 2012. Theme by JCL Design
        </div>
      </div>
    </div>
  </div>
</div>
