                  <li><%= link_to 'Classic', collection_path(:id) %></li>
                  <li><%= link_to 'Soft', collection_path(:id) %></li>
                </ul>
              </li>
            </ul>
          </li>
          <li class="link"><%=link_to 'Home Products' , home_products_path %>
