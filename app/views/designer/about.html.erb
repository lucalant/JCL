<section id="pre-content">
  <div class="pre-content-inner">
    <div class="container">
      <div class="sixteen columns">
        <div class="space-title">
          <h1 class="page-title"><%=@designer.name%> <%=@designer.surname%>.</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="main-container" class="container" role="main">
  <div id="main" class="sixteen columns content">
    <!-- post entry -->
      <div class="post-content">
        <div class="asc-columns one_third">
          <div class="asc-frame">
            <p> <%= image_tag (@designerImage), :style => "width='300'; height='199'" %>  </p>
          </div>

          <p>Collaborated at
            <%=@events.each do |event|%>
                <% link_to event.name, event_path(event), {:class => "more-link"} %>,
            <% end %>
          </p>

         <p>Designed
            <%=@home_products.each do |home_product|%>
                <%= link_to home_product.name, home_product_path(home_product), {:class => "more-link"} %>,
            <% end %>
          </p>
          <p>Designed
            <%=@workspaces.each do |workspace|%>
                <%= link_to workspace.name, workspace_path(workspace), {:class => "more-link"} %>,
            <% end %>
          </p>
          <div class="clearfix"></div>
          <div class="asc-divider divider"></div>

          <p>
            <%= link_to works_path, {:class => "more-link"} do%><span> Notorious works of&nbsp;<%=@designer.name%> <%=@designer.surname%>&nbsp;</span><% end %>
          </p>
          <div class="clearfix"></div>
          <div class="asc-divider divider"></div>

          <p>You are in the category
            <%= link_to 'Designers', designers_path, {:class => "more-link"} %>
          </p>
          <p>
            <%= link_to 'Previous', designer_path(:id), {:class => "asc-button small gray"} %>&nbsp;<strong>……</strong>&nbsp;<%= link_to 'Next', designer_path(:id), {:class => "asc-button small gray"} %></p>
          <p>
                <%= link_to 'All Designers', designers_path, {:class => "asc-button small light"} %>
           </p>
        </div>
        <div class="asc-columns one_half last">
          <p><strong>About</strong></p>
          <p><%= @designer.description %></p>
        <div class="clearfix"></div>
        </div>
        </div>
  </div>
</section>
